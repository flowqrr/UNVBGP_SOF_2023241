@model List<Service>

<div>
    <h2>Services</h2>
</div>
<div>
    @if (Model == null || !Model.Any())
    {
        <p>You don't have any services yet. Start your journey by creating one!</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="ServiceEdit" asp-controller="Host" asp-route-id="@service.ID">
                                @service.Name
                            </a>
                        </td>
                        <td>@service.Description</td>
                        <td>Get shareable ID / <a href="/Host/DeleteService?id=@service.ID">Delete</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="AddService" asp-controller="Host">Create a new Service</a>
</div>