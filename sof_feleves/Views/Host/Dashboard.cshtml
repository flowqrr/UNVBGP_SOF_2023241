@model List<Service>
@using Microsoft.AspNetCore.Http.Extensions;
@{
    var request = ViewContext.HttpContext.Request;
    var baseURL = $"{request.Scheme}://{request.Host}";
}

<div class="container mt-5">
    <h2 class="mb-4">Services</h2>
    @if (Model == null || !Model.Any())
    {
        <p>You don't have any services yet. Start your journey by creating one!</p>
    }
    else
    {
        <table class="table table-striped table-dark text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>
                            <a class="lnk-one" asp-action="ServiceEdit" asp-controller="Host" asp-route-id="@service.ID">
                                @service.Name
                            </a>
                        </td>
                        <td>@service.Description</td>
                        <td>@service.Location</td>
                        <td>
                            <button class="btn btn-two" onclick="copyToClipboard('@baseURL/Guest/ServiceView?id=@service.ID')">
                                Get shareable link for @service.Name
                            </button>
                            /
                            <a href="/Host/DeleteService?id=@service.ID" class="btn btn-three">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="mt-3">
        <a asp-action="AddService" asp-controller="Host" class="btn btn-two">Create a new Service</a>
    </div>
</div>

@section scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text)
                .then(function () {
                    alert("Link to your service copied to your clipboard! Now you can paste it wherever you want to share it :)");
                })
                .catch(function (err) {
                    console.error('Unable to copy text to clipboard', err);
                });
        }
    </script>
}
